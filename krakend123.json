{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "sequential_start": false,
  "endpoints": [
    {
      "endpoint": "/kraken/userdepartments/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/users/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://host.docker.internal:8081"
          ]
        },
        {
          "url_pattern": "/departments/{resp0_departmentId}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://host.docker.internal:8082"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "proxy": {
          "sequential": true
        }
      }
    },
    {
      "endpoint": "/kraken/user/",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/users/",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://host.docker.internal:8081"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_query_strings": [
        "name",
        "departmentId"
      ]
    },
    {
      "endpoint": "/kraken/department/",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/departments/",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://host.docker.internal:8082"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_query_strings": [
        "name",
        "address",
        "code"
      ]
    }
  ],
  "extra_config":{
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 0,
      "exporters": {
        "jaeger": {
          "endpoint": "http://host.docker.internal:14268/api/traces",
          "service_name":"krakend",
          "buffer_max_count": 1000
        }
      }
    }
  }
}
